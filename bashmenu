#!/bin/bash

# =============================================================================
# Bashmenu - Sistema de Menú Interactivo para Administración
# =============================================================================
# Descripción: Script principal de ejecución para Bashmenu
# Versión:     2.1
# Autor:       JESUS MARIA VILLALOBOS
# =============================================================================

# Get the real directory where this script is located (follows symlinks)
SCRIPT_PATH="$(readlink -f "${BASH_SOURCE[0]}")"
SCRIPT_DIR="$(dirname "$SCRIPT_PATH")"

# Execute the main script
exec "$SCRIPT_DIR/src/main.sh" "$@" 